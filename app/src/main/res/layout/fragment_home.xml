<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/rellayout"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageku"
            android:layout_marginTop="7dp"
            android:scaleType="fitXY"
            android:src="@drawable/logoapp" />

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/edittext"
            android:background="@color/broken_white"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/imageku"
            android:layout_marginTop="7dp"
            />
    </RelativeLayout>


    <HorizontalScrollView
        android:id="@+id/horz_scroll"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rellayout"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_bathroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/light"
                android:text="Bathroom"
                android:paddingRight="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/button_kitchen"
                android:layout_width="wrap_content"
                android:fontFamily="@font/light"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Kitchen"
                android:gravity="center"/>

            <TextView
                android:id="@+id/button_verGarden"
                android:layout_width="wrap_content"
                android:fontFamily="@font/light"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:textColorHighlight="@color/broken_white"
                android:text="Vertical Garden"
                android:gravity="center"/>

            <TextView
                android:id="@+id/button_Garden"
                android:layout_width="wrap_content"
                android:fontFamily="@font/light"
                android:layout_height="wrap_content"
                android:text="Garden"
                android:paddingRight="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/button_bedroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/light"
                android:text="Bedroom"
                android:paddingRight="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/button_diningroom"
                android:fontFamily="@font/light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dining Room"
                android:paddingRight="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/button_livingroom"
                android:layout_width="wrap_content"
                android:fontFamily="@font/light"
                android:layout_height="wrap_content"
                android:text="Living Room"
                android:gravity="center"/>
        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:background="@color/broken_white"
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/horz_scroll"/>

</RelativeLayout>