<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MainFragment.DetailsHolderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/content_img"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:scaleType="fitXY"
                android:src="@drawable/bathroom"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:fontFamily="@font/light"
                android:textSize="13.5sp" />

            <TextView
                android:id="@+id/judul_design"
                style="@style/judul_content"
                android:text="Judul Design"/>

            <View
                android:layout_marginTop="7dp"
                android:background="@color/black"
                android:layout_width="35dp"
                android:layout_height="0.5dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:fontFamily="@font/light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/desc_text"
                style="@style/destext_content"
                android:text="@string/bathroom1" />

            <View
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:layout_width="60dp"
                android:layout_height="0.5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/light"
                android:textColor="@color/black"
                android:text="Uploaded By:"
                android:layout_marginTop="5dp"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/relative">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userphoto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/userphoto"
                    app:civ_border_width="0.5dp"/>

                <LinearLayout
                    android:id="@+id/linearkonten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/userphoto">

                    <TextView
                        android:id="@+id/namauser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/reguler"
                        android:text="Abdan Idza Hurmuzi"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/light"
                        android:text="Uploaded 16/March/2020"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/userphoto"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_below="@+id/relative"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_marginLeft="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/addmyhouse_but"
                        android:background="@drawable/buttonpressed"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/reguler"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="AddToHouse"
                        android:gravity="center" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:textSize="12sp"
                        android:id="@+id/save_but_content"
                        android:background="@drawable/buttonpressed"
                        android:fontFamily="@font/reguler"
                        android:layout_width="85dp"
                        android:textColor="@color/white"
                        android:layout_height="40dp"
                        android:text="Save"
                        android:gravity="center" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>